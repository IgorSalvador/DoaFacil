<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoaFácil</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-slate-50 text-slate-900">

    <header class="border-b border-slate-200 bg-white/80 backdrop-blur mb-4">
        <div class="container-app">
            <div class="flex h-16 items-center justify-between gap-4">
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3">
                    <div class="h-9 w-9 rounded-xl bg-slate-900 text-white grid place-items-center font-semibold">
                        D
                    </div>
                    <div class="leading-tight">
                        <div class="font-semibold tracking-tight">DoaFácil</div>
                        <div class="text-xs text-slate-500">Plataforma de doações (MVP)</div>
                    </div>
                </a>

                <nav class="hidden md:flex items-center gap-1">
                    <a asp-controller="Donations" asp-action="Index"
                       class="rounded-xl px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100">
                        Doações
                    </a>
                    <a asp-controller="Requests" asp-action="Index"
                       class="rounded-xl px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100">
                        Solicitações
                    </a>
                    <a asp-controller="TailwindTest" asp-action="Index"
                       class="rounded-xl px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100">
                        UI Kit
                    </a>
                </nav>

                <div class="flex items-center gap-2">
                    <span class="hidden sm:inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-medium text-emerald-700 ring-1 ring-emerald-200">
                        Dev
                    </span>

                    <a asp-controller="Donations" asp-action="Create"
                       class="inline-flex items-center justify-center rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800">
                        Nova doação
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="flex-1 bg-slate-50">
        <div class="container-app sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <footer class="border-t border-slate-200 bg-white">
        <div class="container-app py-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
            <div class="text-sm text-slate-600">
                © @DateTime.UtcNow.Year DoaFácil — Projeto de estudos
            </div>
            <div class="text-xs text-slate-500">
                ASP.NET Core MVC • Tailwind v4 • Clean Architecture
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
