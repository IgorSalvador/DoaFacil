@model AlertViewModel

@{
    var cls = Model.Tone switch
    {
        AlertTone.Success => "bg-emerald-50 text-emerald-900 ring-emerald-200",
        AlertTone.Warning => "bg-amber-50 text-amber-900 ring-amber-200",
        AlertTone.Error => "bg-rose-50 text-rose-900 ring-rose-200",
        _ => "bg-sky-50 text-sky-900 ring-sky-200"
    };
}

<div class="rounded-2xl p-4 ring-1 @cls">
    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        <div class="font-semibold">@Model.Title</div>
    }
    <div class="text-sm opacity-90">@Model.Message</div>
</div>
