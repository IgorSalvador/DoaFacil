@using Microsoft.AspNetCore.Html

@{
    ViewData["Title"] = "UI Kit";
}

<div class="space-y-6">
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold tracking-tight">UI Kit</h1>
            <p class="mt-1 text-sm text-slate-600">Componentes base do DoaFácil</p>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Components/_Badge.cshtml",
        new BadgeViewModel { Text = "EN-04", Tone = BadgeTone.Green })
    </div>

    @await Html.PartialAsync("~/Views/Shared/Components/_Alert.cshtml",
        new AlertViewModel { Title = "Status", Message = "Componentes tipados e estáveis.", Tone = AlertTone.Success })

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @await Html.PartialAsync("~/Views/Shared/Components/_Card.cshtml",
                new CardViewModel
                {
                    Title = "Botões",
                    Subtitle = "Primary / Secondary / Danger",
                    Body = new HtmlString(@"
                        <div class='flex flex-wrap gap-3'>
                        <a class='rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800'>Primário</a>
                        <a class='rounded-xl bg-white px-4 py-2 text-sm font-semibold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-50'>Secundário</a>
                        <a class='rounded-xl bg-rose-600 px-4 py-2 text-sm font-semibold text-white hover:bg-rose-500'>Excluir</a>
                        </div>
                        ")
                })

        @await Html.PartialAsync("~/Views/Shared/Components/_Card.cshtml",
                new CardViewModel
                {
                    Title = "Inputs",
                    Subtitle = "Campos padrão",
                    Body = new HtmlString(@"
                        <div class='space-y-4'>
                        <div class='space-y-1.5'>
                        <label class='text-sm font-medium text-slate-700'>Título do item</label>
                        <input class='w-full rounded-xl bg-white px-3 py-2 text-sm text-slate-900 ring-1 ring-slate-200 placeholder:text-slate-400 focus:ring-2 focus:ring-slate-300 outline-none' placeholder='Ex.: Cesta básica' />
                        </div>
                        </div>
                        ")
                })
    </div>
</div>
